extends layout

block content
    .container
        .row
            .col-12.col-sm-6
                h2 Add User
                form(action="/users/add", method="post")
                    .row
                        .form-group.col-6
                            label(for="") Firstname
                            input(type="text", name="firstname", class="form-control")
                        .form-group.col-6
                            label(for="") Lastname
                            input(type="text", name="lastname", class="form-control")
                    .row
                        .form-group.col-6
                            label(for="") Email
                            input(type="text", name="email", class="form-control")
                        .form-group.col-6
                            label(for="") Age
                            input(type="text", name="age", class="form-control")
                    .row
                        .form-group.col-6
                            label(for="") Status
                            select(name="status", class="form-control")
                                option(value="active") Active
                                option(value="pending") Pending
                    .row
                        .form-group.col-6
                            button(type="submit").btn.btn-block.btn-success Add
                        .form-group.col-6
                            button(type="reset").btn.btn-block.btn-warning Reset
    .container
        h2 Users
        .row
            each user in users
                .col-6.col-4
                    h4.text-primary= user.firstname + ' ' + user.lastname
                    p= 'Age : ' + user.age
                    p= 'Email : ' + user.email
                    p(class=(user.status == 'active' ? 'text-success' : 'text-danger'))= 'Status : ' + user.status
                    div
                        ul.list-inline
                            li.list-inline-item
                                button.btn.btn-primary Edit
                            li.list-inline-item
                                form(action="/users/delete/"+ user._id, method="post")
                                    button(type="submit").btn.btn-danger Del
                    hr